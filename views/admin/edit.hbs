<div class="containerproduct edit-product" style="margin-top:150px">
    <h4 class="m-y-2">Edit Product</h4>
    <form role="form" method="POST" action="/admin/editproduct">
        <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label">Title</label>
            <div class="col-lg-9">
                <input class="form-control" type="text" value="{{product.title}}" name="title">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label">Description</label>
            <div class="col-lg-9">
                <input class="form-control" type="text" value="{{product.description}}" name="description">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label">Price</label>
            <div class="col-lg-9">
                <input class="form-control" type="text" value="{{product.price}}" name="price">
            </div>
        </div>

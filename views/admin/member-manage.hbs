<link rel='stylesheet' href='../public/stylesheets/shopping-cart.css' />
<div class="container containercart" id="nocarousel">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:15%">Avatar</th>
                <th style="width:25%">Email</th>
                <th style="width:20%">Name</th>
                <th style="width:15%">Address</th>
                <th style="width:15%">Status</th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        {{#if users}}
        <tbody>
            {{#each users}}
            <tr>
                <td data-th="Avatar">
                    <div class="row">
                        {{#if this.imagePath}}
                        <div class="col-sm-2">
                            <img src="/uploads/{{this.imagePath}}" alt="..." class="img-responsive" style="width: 100px ; height: 100px">
                        </div>
                        {{else}}
                        <div class="col-sm-2">
                            <img src="http://via.placeholder.com/100x100" alt="..." class="img-responsive" style="width: 100px ; height: 100px">
                        </div>
                        {{/if}}
                        <div class="col-sm-1"></div>
                        <div class="col-sm-9">
                            {{!--
                            <h4 class="">{{this.item.title}}</h4>
                            <p>{{this.item.description}}</p> --}}
                        </div>
                    </div>
                </td>
                <td data-th="Email">{{this.email}}</td>
                <td data-th="Name">
                    {{#if this.firstname}} {{this.firstname}} {{else}} Waiting for update {{/if}}
                </td>
                <td data-th="Address">
                    {{#if this.address}} {{this.address}} {{else}} Waiting for update {{/if}}
                </td>
                <td data-th="Status">
                    {{#if this.banned}} Banned {{else}} Normal {{/if}}
                </td>
                <td class="actions" data-th="" id="ban">
                    <button class="btn btn-danger btn-sm"><i class="fas fa-ban"></i></button>						
                </td>
            </tr>
            {{/each}}
        </tbody>
        {{/if}}
    </table>
    <div style="height: 120px"></div>
</div>

<div class="container-fuild containerproduct justify-content-center"  style="clear: left">
{{#each cates}}
    <h1 class="heading1">
        <span class="maintext"> {{this.cate.name}} </span>
        <span class="subtext"> See Our Most Featured Products</span>
    </h1>
    <div class="row">
    {{#each this.products}}
		<div class="khung-t cl-go kt-1 col-lg-3 col-md-4 col-sm-6" id="items">
			<div class="card d-flex h-100">
				<img class="card-img-top  images rounded img-thumbnail" src="{{this.imagePath}}" alt="Card image cap">
				<div class="card-body overlay rounded">
					<h5 class="card-title">{{this.title}}</h5>
					<p class="card-text">{{this.description}}</p>
					<div class="price">Price: ${{this.price}}</div>
					<a data-toggle="modal" name="btn-detail" id="btn-detail" class="btn btn-outline-success" href="#modal{{this._id}}" role="button">Details</a>
					<a href="/add-to-cart/{{this._id}}" class="btn btn-success">Add to Cart</a>
				</div>
			</div>
		</div>

		        <!--MODAL BOX PRODUCT DETAIL-->
			<div class="modal fade" id="modal{{this._id}}" role="dialog">
            <div class="modal-dialog modal-lg">
                <!-- Modal content-->
                <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Product details</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                        <div class="container" id="body">
                            <h1 style="text-align: center">{{this.title}}</h1>
                            <div class="divider-form"></div>
                                <div class="row">
                                    <div class="col-md-6 mt-5">
                                        <!--This is product image-->
                                        <div class="row">
                                            <div class="col-md-12">
                                                <img src="{{this.imagePath}}" alt="item-1" class="img-fluid">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <p><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star" style="color:rgb(179, 174, 174);"></i></p>
                                            </div>
                                        </div>
                                        <!-- end row -->
                                        <div class="row">
                                            <div class="col-md-12 bottom-rule">
                                                <h2 class="product-price">Price: ${{this.price}}</h2>
                                            </div>
                                        </div><!-- end row -->
                                    </div>
                                    <div class="col-md-6 mt-5">
                                        <!--This is product infomation-->
                                        <!--Row 1-->
                                        <div class="row">
                                            <div class="col-md-12">
                                                <span class="badge badge-success">New</span>
                                                <span class="monospaced">No. 1190</span>
                                            </div>
                                        </div><!-- end row -->
                                        <!--Row 2-->
                                        <div class="row">
                                            <div class="col-md-12">
                                                <p class="description">
												{{this.description}}
                                                </p>
                                            </div>
                                        </div><!-- end row -->
                                        <div class="row add-to-cart">
                                            <div class="col-md-4 product-qty">
                                                <input type="number" name="" id="" placeholder="1" style="width: 40px;">
                                            </div>
                                            <div class="col-md-4 col-md-offset-1 text-center">
												<a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a>
                                            </div>
                                        </div><!-- end row -->
                                        
                                        <div class="row">
                                            <div class="col-md-4">
                                                    <span class="badge badge-primary">In stock</span>
                                            </div>
                                        </div><!-- end row -->
                                        <div class="row">
                                        <div class="col-md-12 bottom-rule top-10"></div>
                                        </div><!-- end row -->
                                        
                                        <div class="row">
                                        <div class="col-md-12 top-10">
                                            <p>To order by telephone, <a href="tel:841683442729">please call +84 168 344 2729</a></p>
                                        </div>
                                        </div><!-- end row -->
                                        <div class="row mt-5"></div>
                                        <!-- Nav tabs -->
                                        <ul class="nav nav-tabs">
                                            <li class="nav-item">
                                                <a class="nav-link active" data-toggle="tab" href="#">Review</a>
                                            </li>   
                                        </ul>
                                        <!--Content nav tab-->
                                        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptate facilis exercitationem sequi, ex dolor id pariatur et optio voluptas incidunt eos excepturi officiis nam in.</p>
                                    </div>
                                </div>
                            </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
                </div>
                
            </div>
        </div>
    {{/each}}
    </div>
    <a href="" class="btn btn-info btnviewmore">View more <i class="fas fa-chevron-right"></i><i class="fas fa-chevron-right"></i></a>
    <div style="clear: right"></div>
{{/each}}
</div>
